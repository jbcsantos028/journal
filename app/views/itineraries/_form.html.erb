<% if @itinerary.errors.any? %>
  <h2>The following errors prevented the itinerary from being saved</h2>
  <ul>
    <% @itinerary.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @itinerary, local: true) do |f| %>

  <p>
    <%= f.label :location %><br/>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :detail %><br/>
    <%= f.text_area :detail %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>