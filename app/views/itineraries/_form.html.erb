<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @itinerary, class: "shadow p-5 mb-3 rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :location, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :location, class: "form-control shadow rounded", placeholder: "Location of itinerary" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :detail, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :detail, rows: 10, class: "form-control shadow rounded", placeholder: "Details of itinerary" %>
          </div>
        </div>
        <br/>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-dark btn-lg" %>
        </div>

      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to itineraries listing ]', itineraries_path, class:"text-dark" %>
    </div>
  </div>
</div>